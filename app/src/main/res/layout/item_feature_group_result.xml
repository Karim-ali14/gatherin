<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvItemName"
        style="@style/Main2Text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_rounded_light_grey"
        android:gravity="center_horizontal"
        android:paddingStart="8dp"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="8dp"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@color/lightBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Derlivery on time" />

    <EditText
        android:id="@+id/tvMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="32dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_32"
        android:background="@drawable/bg_rounded_light_grey"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:inputType="number"
        android:hint="@string/zero_value"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemName"
        app:layout_constraintStart_toEndOf="@+id/tvItemName"
        app:layout_constraintTop_toTopOf="@+id/tvItemName"
        tools:text="" />
</androidx.constraintlayout.widget.ConstraintLayout>