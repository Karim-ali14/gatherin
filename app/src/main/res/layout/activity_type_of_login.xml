<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    tools:context=".SplashAndTypeOfLogin.TypeOfLogin.View.TypeOfLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="131dp"
            android:layout_height="58dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/logo_app_name" />

        <TextView
            android:id="@+id/tvChooseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLogo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/chooseAccountType"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/tvChooseType"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">

                <RelativeLayout
                    android:id="@+id/rlUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivUser"
                        android:layout_width="53dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivUser"
                        android:layout_centerHorizontal="true"
                        android:text="@string/user"
                        android:textColor="@color/lightBlack" />

                </RelativeLayout>

            </com.github.florent37.shapeofview.shapes.RoundRectView>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4" />

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">

                <RelativeLayout
                    android:id="@+id/rlTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ivTeacher"
                        android:layout_width="53dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_teacher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivTeacher"
                        android:layout_centerHorizontal="true"
                        android:text="@string/teacher"
                        android:textColor="@color/lightBlack" />

                </RelativeLayout>

            </com.github.florent37.shapeofview.shapes.RoundRectView>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>